<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rowland.movies">
    <!-- ANDROID PERMISSIONS -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Dark">

        <meta-data android:name="AA_DB_NAME" android:value="popmovies.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
        <meta-data android:name="AA_MODELS" android:value="com.rowland.rest.pojos.Movies,
                                                            com.rowland.pojos.Reviews, com.rowland.pojos.Trailers" />

        <activity
            android:name="com.rowland.movies.ui.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
