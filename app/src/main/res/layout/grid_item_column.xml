<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_container"
    android:layout_width="match_parent"
    android:layout_height="270dp">

    <ImageView
        android:id="@+id/grid_poster_image_view"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:transitionName="posterImageView"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/grid_title_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/apptheme_transparent"
        android:layout_marginBottom="1dp"
        android:gravity="bottom"
        android:layout_gravity="center_horizontal|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_sort_type_text_view"
            android:textColor="@color/apptheme_primary_text_white"
            android:textSize="16sp"
            tools:text="9.2"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/grid_release_date_text_view"
            android:layout_toRightOf="@+id/grid_sort_type_image_view"
            android:layout_toEndOf="@+id/grid_sort_type_image_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_release_date_text_view"
            android:textColor="@color/apptheme_primary_text_white"
            android:textSize="16sp"
            tools:text="2015"
            android:paddingRight="16dp"
            android:layout_alignTop="@+id/grid_sort_type_text_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/grid_sort_type_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</FrameLayout>
