<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="270dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/grid_poster_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:transitionName="posterImageView" />


        <RelativeLayout
            android:id="@+id/grid_title_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="1dp"
            android:background="@color/apptheme_transparent"
            android:gravity="bottom">

            <TextView
                android:id="@+id/grid_sort_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/grid_sort_type_image_view"
                android:layout_toLeftOf="@+id/grid_release_date_text_view"
                android:layout_toRightOf="@+id/grid_sort_type_image_view"
                android:text="6.8"
                android:textColor="@color/apptheme_primary_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/grid_release_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/grid_sort_type_text_view"
                android:paddingRight="16dp"
                android:text="2016"
                android:textColor="@color/apptheme_primary_text_black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/grid_sort_type_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:visibility="visible" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
